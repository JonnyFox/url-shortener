{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "sourceRoot": "src",
        "outDir": "dist"
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}